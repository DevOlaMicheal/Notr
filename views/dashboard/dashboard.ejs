<!DOCTYPE html>
<html lang="en">
<%- include('../partials/header.ejs') %>
<body>


        <%- include('./dashpartials/nav.ejs') %>
    <div class="container my-4">

        <div class="display-6 my-4">Welcome to your notes <%= user %>! </div>
        <hr />
        <div class="row my-4">
            <div class="col-md-8 mb-4">
                <div class="card container p-4">
                      <div class="card-title">
                      <h5 class="fw-normal">All notes</h5>
                        
                      </div>
                    <div class="card-body row text-white">
                      
                        <% if(notes.length > 0) { %>

                            <% notes.forEach(note => { %>
                                
                                <div class="col-md-5 note p-2 m-2">
                                    <a href="/notes/<%= note.id %>" class="note-link text-white">
                                    <div class="">
                                       <p class="lead"><%= note.title %></p> 
                                        <p class="small">created: <%= note.createdAt %></p>
                                    </div>
                                </a> 
                                </div>
                           
                           <% }); %>
                        
                        <% } else { %>
                            <div>Notes is empty!</div>
                        <% } %>
                       

                    </div>
                  </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                      <h5 class="fw-normal">Pinned notes</h5>
                    </div>
                  </div>
            </div>
<br />
        
        </div>

    </div>


<!-- <%- include('./dashpartials/footer.ejs') %> -->
</body>
</html>